.partial-field-content {
    border-bottom: 1px solid #dedede;
}
.img-dropdown .dropdown-menu{
    width: 100%;
    min-width: 100%;
}
.img-dropdown .dropdown-menu > li > a {
    padding: 10px 20px;
    border-bottom: 1px solid #dedede;
}

.right-content{
    margin-bottom: 0px !important;
}
.employee-bottom-section {
    border-bottom: 1px solid #dedede;
}
.employee-add-heading ul{
    margin-left: 15px;
}
.employee-add-heading ul li{
    margin: 15px 0px;
}
.img-dropdown{
    position: relative;
}
.img-dropdown img {
    width: 50px;
    height: 50px;
}
.img-dropdown .dropdown-toggle{
    height: 70px;
    line-height: 70px;
    display: block;
    padding: 0 20px;
    position: relative;
}
.img-dropdown img {
    width: 50px;
    height: 50px;
    border-radius: 50%;
}
.form-group.img-dropdown {
    border: 1px solid #dedede;
    border-radius: 4px;
    margin-top: 10px;
}
.img-dropdown span.hr-select-dropdown {
    position: absolute;
    top: 50%;
    right: 10px;
    width: auto;
    transform: translate(-70%, -50%) !important;
}





@media screen and (max-width: 767px) {

